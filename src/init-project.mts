  DOC_CATEGORIES,
  DOC_CATEGORY_NAMES,
  DOC_CATEGORY_RANGES,
  buildDocsPath,
  REQUIRED_TEMPLATES,
  RECOMMENDED_TEMPLATES,
  todayISO,
  type HandoffConfig,
} from './types.js';
import {
  log,
  fileExists,
  detectTechStack,
  getProjectVersion,
  getFrameworkRoot,
  resolveProjectDir,
  getHandoffDocsPath,
  parseSessionArg,
